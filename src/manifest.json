{
    "name": "Usability Hike: Find usability problems",
    "short_name": "Hike",
    "version": "1.1.0",
    "description": "Test web pages against common usability problems that make them hard to use.",
    "permissions": [
        "background",
        "activeTab",
        "<all_urls>"
    ],

    "background": {
        "scripts": [
            "js/background/main.js"
        ]
    },

    "browser_action": {
        "default_icon": {
            "16": "img/icon16.png",
            "32": "img/icon32.png",
            "48": "img/icon48.png",
            "128": "img/icon128.png"
        },
        "default_title": "Usability Hike"
    },
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },

    "web_accessible_resources": ["style/report/main.css"],

    "manifest_version": 2
}
